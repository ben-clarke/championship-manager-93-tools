{
    "tabWidth": 2,
    "parser": "typescript",
    "arrowParens": "always",
    "quoteProps": "as-needed",
    "trailingComma": "all",
    "printWidth": 100,
    "overrides": [
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": "*.json",
            "options": { "parser": "json", "tabWidth": 2 }
        },
        {
            "files": "*.html",
            "options": { "parser": "html" }
        }
    ]
}
